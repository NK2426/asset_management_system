doctype html
html
  head
    title Add New Employee
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css')
    style.
      body {
        background-color: #f8f9fa;
      }

  body
  extends layout.jade  

block content
    .container.mt-5
      .row.justify-content-center
        .col-md-10
          .card.shadow
            .card-header.bg-success.text-white
              h4.mb-0
                i.bi-person-plus-fill.me-2
                | Add New Employee

            .card-body
              form(action="/employee/add", method="POST")
                .row
                  .col-md-6.mb-3
                    label.form-label(for="name") Full Name
                    input.form-control(type="text", name="name", placeholder="Enter full name", required)

                  .col-md-6.mb-3
                    label.form-label(for="email") Email
                    input.form-control(type="email", name="email", placeholder="Enter email", required)

                .row
                  .col-md-6.mb-3
                    label.form-label(for="phone") Phone
                    input.form-control(type="text", name="phone", placeholder="Enter phone number", required)

                  .col-md-6.mb-3
                    label.form-label(for="department") Department
                    input.form-control(type="text", name="department", placeholder="e.g. HR, IT", required)

                .row
                  .col-md-6.mb-3
                    label.form-label(for="designation") Designation
                    input.form-control(type="text", name="designation", placeholder="e.g. Manager", required)

                  .col-md-6.mb-3
                    label.form-label(for="salary") Salary (â‚¹)
                    input.form-control(type="number", name="salary", placeholder="Enter salary", step="0.01", required)

                .row
                  .col-md-6.mb-3
                    label.form-label(for="doj") Date of Joining
                    input.form-control(type="date", name="doj", required)

                  .col-md-6.mb-3
                    label.form-label(for="doe") Date of Exit
                    input.form-control(type="date", name="doe")

                .mb-3
                  label.form-label(for="address") Address
                  textarea.form-control(name="address", rows="3", placeholder="Enter address", required)

                .mb-3
                  label.form-label(for="status") Status
                  select.form-select(name="status")
                    option(value="1") Active
                    option(value="0") Inactive

                .d-flex.justify-content-end.mt-4
                  button.btn.btn-success(type="submit")
                    i.bi-check-circle.me-1
                    | Add Employee
                  a.btn.btn-secondary.ms-2(href="/employee")
                    i.bi-x-circle.me-1
                    | Cancel

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
