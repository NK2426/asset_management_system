extends layout.jade

block content
  .container.mt-5
    h2.text-primary.mb-4 Assets for Branch #{branchName}

    table.table.table-bordered.table-striped
      thead
        tr
          th Asset Make
          th Model
          th Make
          th Value
          th Status
      tbody
        each asset in assets
          tr
            td #{asset.make}
            td #{asset.model || '-'}
            td #{asset.make || '-'}
            td #{asset.price || '-'}
            td #{asset.status}

  
    tfoot
      tr
        td(colspan='4').text-end.fw-bold Total Value:
        td #{totalValue.toFixed(2)}


  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
