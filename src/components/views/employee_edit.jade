doctype html
html
  head
    title Edit Employee
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  body
  extends layout.jade  

block content
    .container.mt-5
      h2.text-primary.mb-4 Edit Employee

      form(method='POST', action=`/employee/edit/${employee.id}`)
        .mb-3
          label.form-label(for='name') Name
          input.form-control(type='text', name='name', id='name', required, value=employee.name)

        .mb-3
          label.form-label(for='email') Email
          input.form-control(type='email', name='email', id='email', required, value=employee.email)
         .mb-3
          label.form-label(for='doe') Date of Exit
          input.form-control(type='date', name='doe', id='doe', required, value=employee.doe)

        .mb-3
          label.form-label(for='status') Status
          select.form-select(name='status', id='status')
            option(value='Active', selected=employee.status === 'Active') Active
            option(value='Inactive', selected=employee.status === 'Inactive') Inactive

        button.btn.btn-primary(type='submit') Update
        a.btn.btn-secondary.ms-2(href='/employee') Cancel
