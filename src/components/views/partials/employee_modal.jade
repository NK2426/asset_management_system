  dt.col-sm-4.mb-2.text-start Full Name
  dd.col-sm-8.mb-2.text-start #{employee.name}

  dt.col-sm-4.mb-2.text-start Email
  dd.col-sm-8.mb-2.text-start #{employee.email}

  dt.col-sm-4.mb-2.text-start Phone
  dd.col-sm-8.mb-2.text-start #{employee.phone}

  dt.col-sm-4.mb-2.text-start Department
  dd.col-sm-8.mb-2.text-start #{employee.department}

  dt.col-sm-4.mb-2.text-start Designation
  dd.col-sm-8.mb-2.text-start #{employee.designation}

