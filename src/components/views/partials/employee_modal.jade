  dd.col-sm-8.mb-2.text-start #{employee.doe == '' ? 'NA' : employee.doe}

  dt.col-sm-4.mb-2.text-start Address
  dd.col-sm-8.mb-2.text-start #{employee.address}

  dt.col-sm-4.mb-2.text-start Status
  dd.col-sm-8.mb-2.text-start 
    if employee.status == 1 || employee.status === 'Active'
      span.badge.bg-success Active
    else
      span.badge.bg-secondary Inactive
