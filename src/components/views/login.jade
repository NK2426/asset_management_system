doctype html
html
  head
    title Login | Asset Management System
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        background-color: #f8f9fa;
      }
      .login-box {
        margin-top: 80px;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        background-color: white;
      }
  body
    .container
      .row.justify-content-center
        .col-md-6.col-lg-5
          .login-box
            h3.mb-4.text-center.text-primary Asset Management Login
            if error
              .alert.alert-danger.text-center #{error}
            form(action="/login", method="POST")
              .mb-3
                label.form-label(for="email") Email
                input.form-control(type="email", name="email", id="email", required)
              .mb-3
                label.form-label(for="password") Password
                input.form-control(type="password", name="password", id="password", required)
              button.btn.btn-primary.w-100(type="submit") Sign In
            .mt-3.text-center
              small.text-muted &copy; #{new Date().getFullYear()} Asset Manager
