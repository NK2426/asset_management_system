doctype html
html
  head
    title Employee Master
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css')
    body
block content
  .container.mt-5
    .card.shadow
      .card-header.bg-primary.text-white
        h5.mb-0 Add Asset Category
      .card-body
        form(action="/asset-category/add" method="POST")
          .mb-3
            label.form-label(for="name") Category Name
            input.form-control(type="text", name="name", placeholder="e.g. Laptop", required)

          button.btn.btn-success(type="submit") Add Category
          a.btn.btn-secondary.ms-2(href="/assetcategory") Cancel
